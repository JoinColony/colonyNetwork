{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "arg-overflow": ["warning", 5],
    "variable-declarations": "error",
    "quotes": ["error", "double"],
    "indentation": ["error", 2],
    "security/no-inline-assembly": 0,
    "security/no-block-members": 0,
    "no-experimental": 0,
    "error-reason": "error",
    "max-len": "error",
    "no-trailing-whitespace": "error"
  }
}
