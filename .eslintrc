{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "web3": true,
    "assert": true,
    "contract": true
  },
  "rules": {
    /* Test-only */
    "no-global-assign": [0],
    "no-unused-expressions": [0],
    "func-names": [0],
    "global-require": [0],
    "arrow-body-style": [0],
    "no-underscore-dangle": [0],
    "prefer-arrow-callback": [0],
    "new-cap": [0],
    "import/no-unresolved": [0],
    "import/no-extraneous-dependencies": [0]
    /* Test-only */
  }
}
