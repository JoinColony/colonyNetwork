{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es6",
    "types": ["node"]
  },
  "include": ["src/**/*", "contracts/**/*"],
  "exclude": ["node_modules"]
}
